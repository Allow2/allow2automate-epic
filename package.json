{
  "name": "@allow2/allow2automate-epic",
  "version": "1.0.0",
  "description": "Epic Games Store parental control monitoring via Allow2 Agent",
  "main": "./dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js"
  },
  "allow2automate": {
    "displayName": "Epic Games",
    "shortName": "epic",
    "category": "gaming",
    "permissions": [
      "network",
      "agent"
    ],
    "requiresAgent": true,
    "api": {
      "version": "1.0",
      "actions": [
        {
          "id": "enableEpicMonitoring",
          "name": "Enable Epic Games Monitoring",
          "description": "Start monitoring Epic Games launcher and games on agent devices"
        },
        {
          "id": "getEpicStatus",
          "name": "Get Epic Status",
          "description": "Get current Epic Games monitoring status across all agents"
        }
      ]
    }
  },
  "keywords": [
    "allow2automate",
    "epic",
    "epic-games",
    "fortnite",
    "gaming",
    "parental-controls",
    "agent"
  ],
  "author": "Allow2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Allow2/allow2automate-epic"
  },
  "bugs": {
    "url": "https://github.com/Allow2/allow2automate-epic/issues"
  },
  "homepage": "https://github.com/Allow2/allow2automate-epic#readme",
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0",
    "@material-ui/core": "^4.12.0",
    "@material-ui/icons": "^4.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "jest": "^29.7.0",
    "rollup": "^3.29.0"
  },
  "dependencies": {}
}
